<form action="/pirate" method="POST">
  <div class="form-group">
    <label for="sir_name">Sir Name</label>
    <input type="text" class="form-control" name="sir_name" aria-describedby="sir_name" placeholder="Enter Sir Name">
    <small name="emailHelp" class="form-text text-muted">You know, you're family name</small>
  </div>
  <div class="form-group">
    <label for="birth_country">Birth Country</label>
    <input type="text" class="form-control" name="birth_country" placeholder="Birth Country">
  </div>
  <div class="form-group">
    <label for="worth">Worth</label>
    <input type="text" class="form-control" name="worth" placeholder="Worth">
  </div>
  <div class="form-group">
    <label for="death">Date of Death</label>
    <input type="text" class="form-control" name="death" placeholder="When did this great pirate die...">
  </div>
  <div class="form-group">
    <label for="nick_name">Nick Name</label>
    <input type="text" class="form-control" name="nick_name" placeholder="What do your friends call you?">
  </div>
  <div class="form-check">
    <input type="checkbox" name="beard" class="form-check-input">
    <label class="form-check-label" for="beard">Has a beard</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
